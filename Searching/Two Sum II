class Solution:
    def twoSum(self, numbers: List[int], target: int) -> List[int]:
        l = 0
        r = len(numbers)-1
        print(numbers)
        print(target)
        out = []
        while l<r:
            print(l,r)
            if numbers[l]+numbers[r] == target:
                out.append(l+1)
                out.append(r+1)
                break   #applying break was necessary , got to know after using print statements
            elif numbers[l]+numbers[r]>target:
                r-=1  #mistake just wrote r-1
            else:
                l+=1   #mistake just wrote l+1
            #else:
                #out.append(l+1)
                #out.append(r+1)
        return out
                
            
        
        
